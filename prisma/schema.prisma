generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id @unique
  email    String     @unique
  files    File[]
  savedFiles SavedFile[]  
  areas    UserArea[]
}

model Area {
  id          String     @id @default(cuid())
  name        String
  description String?    @db.Text
  files       File[]
  users       UserArea[]
}

model UserArea {
  id     String @id @default(cuid())
  user   User   @relation(fields: [userId], references: [id])
  userId String
  area   Area   @relation(fields: [areaId], references: [id])
  areaId String
  role   Role   @default(MEMBER)

  @@unique([userId, areaId])
}

model SavedFile {
  id        String @id @default(cuid())
  user      User   @relation(fields: [userId], references: [id])
  userId    String
  file      File   @relation(fields: [fileId], references: [id])
  fileId    String
  createdAt DateTime @default(now())

  @@unique([userId, fileId]) // Un usuario no puede guardar el mismo archivo m√°s de una vez
}


enum Role {
  ADMIN
  MEMBER
}

enum UploadStatus {
  PENDING
  PROCESSING
  FAILED
  SUCCESS
}

model File {
  id           String       @id @default(cuid())
  name         String
  uploadStatus UploadStatus @default(PENDING)
  url          String       @db.Text
  key          String
  fileType     FileType     @map("fileType")
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  user         User         @relation(fields: [userId], references: [id])
  userId       String
  area         Area         @relation(fields: [areaId], references: [id])
  areaId       String
  isDeleted Boolean  @default(false)
  savedFiles   SavedFile[]

  @@index([userId])
  @@index([areaId])
}

enum FileType {
  PDF
  WORD
  EXCEL
  IMAGE
}